<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.todo.TodoFragment">

<Button
android:id="@+id/buttonAddEditTask"
android:layout_height="wrap_content"
android:layout_marginBottom="48dp"
android:layout_marginHorizontal="24dp"
android:layout_width="match_parent"
android:text="@string/save"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="1.0" />

<TextView
android:id="@+id/textViewPageTitle"
android:layout_height="wrap_content"
android:layout_width="match_parent"
android:paddingHorizontal="16dp"
android:paddingVertical="8dp"
android:text="@string/create_task"
android:textColor="@color/primaryDarkColor"
android:textSize="34sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.0" />

<EditText
android:backgroundTint="@color/secondaryColor"
android:ems="10"
android:hint="@string/task_textbox_hint"
android:id="@+id/editTextTextPersonName"
android:importantForAutofill="no"
android:inputType="textLongMessage"
android:layout_height="wrap_content"
android:layout_marginHorizontal="16dp"
android:layout_marginTop="48dp"
android:layout_width="0dp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/textViewPageTitle"
app:layout_constraintVertical_bias="0.0" />


<ImageView
android:contentDescription="@string/calender_image"
android:layout_height="24dp"
android:layout_marginBottom="20dp"
android:layout_marginStart="24dp"
android:layout_width="24dp"
android:src="@drawable/ic_outline_calendar_today_24"
app:layout_constraintBottom_toTopOf="@+id/buttonAddEditTask"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.0"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="1.0" />

<TextView
android:id="@+id/textViewDatePicker"
android:layout_height="wrap_content"
android:layout_marginBottom="16dp"
android:layout_marginHorizontal="40dp"
android:layout_marginStart="24dp"
android:layout_width="200dp"
android:paddingEnd="4dp"
android:paddingStart="30dp"
android:paddingVertical="4dp"
android:text="@string/demo_task_date"
android:textSize="16sp"
app:layout_constraintBottom_toTopOf="@+id/buttonAddEditTask"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.0"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="1.0" /></androidx.constraintlayout.widget.ConstraintLayout>
